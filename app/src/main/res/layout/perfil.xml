<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/back"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.v7.widget.CardView
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/backcine3"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/cine" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="135dp"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="247dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Francisco Javier"
                                    android:textColor="@color/back"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Fan"
                                    android:textColor="@color/wordTrans"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:orientation="horizontal">

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="76dp"
                                android:layout_height="50dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="55.47"
                                    android:textColor="@color/back"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Puntos"
                                    android:textColor="@color/wordTrans"
                                    android:textSize="10dp" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <ProgressBar
                                android:id="@+id/progressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:progress="50"
                                android:progressTint="#EDF718" />

                            <TextView
                                android:id="@+id/fecha"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="15 visitas"
                                android:textColor="@color/wordTrans"
                                android:textSize="10sp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/boletos"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/back"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_ticket_1"
                    android:onClick="onClick"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:text="      Mis Boletos"
                    android:textColor="@color/wordBlack"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/pedidos"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:background="@color/back"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_dinner"

                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/wordBlack"
                    android:text="      Mis Pedidos" />


                <TextView
                    android:id="@+id/club"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/back"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/ic_credit_card"
                    android:onClick="onClick"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/wordBlack"
                    android:text="      Club Cinépolis" />

                <TextView
                    android:id="@+id/cash"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/back"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_dollar"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/wordBlack"
                    android:text="      CineCash" />


                <TextView
                    android:id="@+id/card"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/back"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_wallet"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/wordBlack"
                    android:text="      Mis tarjetas" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="1dp"
                    android:background="#bfbfbf"/>

                <TextView
                    android:id="@+id/help"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/back"
                    android:clickable="true"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/wordBlack"
                    android:text="      ¿Necesita ayuda?" />

                <TextView
                    android:id="@+id/visita"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/back"
                    android:clickable="true"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/wordBlack"
                    android:text="      Activia visita guiada" />

                <TextView
                    android:id="@+id/tutorial"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/back"
                    android:clickable="true"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/wordBlack"
                    android:text="      Ver tutorial" />

                <TextView
                    android:id="@+id/buzon"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/back"
                    android:clickable="true"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/wordBlack"
                    android:text="      Buzón" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
